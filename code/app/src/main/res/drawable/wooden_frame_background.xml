<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- A brownish solid color for a wood-like background -->
    <solid android:color="#8B4513" />
    <!-- A darker brown stroke to simulate a frame -->
    <stroke
        android:width="2dp"
        android:color="#5D2E0F" />
    <corners android:radius="8dp" />
    <!-- Optional: add padding if needed -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
