<?xml version="1.0" encoding="utf-8"?>
<!-- A vertical layout: an included post view at the top, a header and comments list, and a bottom comment input section -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commentActivityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top: Included post item (reuse your item_post layout) -->
    <include
        android:id="@+id/includedPost"
        layout="@layout/item_post" />

    <!-- Header for comments -->
    <TextView
        android:id="@+id/tvCommentsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Comments"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Middle: RecyclerView to show list of comments -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerComments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp" />

    <!-- Bottom: Comment input area -->
    <LinearLayout
        android:id="@+id/commentInputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#EEEEEE">

        <EditText
            android:id="@+id/editComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add a comment..."
            android:padding="8dp"
            android:background="@android:drawable/edit_text" />

        <Button
            android:id="@+id/buttonSendComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
