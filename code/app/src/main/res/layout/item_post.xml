<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemPostRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/white_bg"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imagePost"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/demo_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="post_image"/>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="I Bought A New Puppy Yesterday!"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/imagePost"
        app:layout_constraintStart_toEndOf="@+id/imagePost"
        app:layout_constraintEnd_toStartOf="@+id/buttonPostMenu"/>

    <ImageButton
        android:id="@+id/buttonPostMenu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_vert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Menu options"
        app:layout_constraintTop_toTopOf="@+id/imagePost"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6 hours ago â€¢ HAPPY"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:layout_constraintStart_toEndOf="@+id/imagePost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imagePost"
        />

    <LinearLayout
        android:id="@+id/postActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@+id/imagePost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/buttonLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:layout_margin="4dp"
            android:backgroundTint="@android:color/black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>