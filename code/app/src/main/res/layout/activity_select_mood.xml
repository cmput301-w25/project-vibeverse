<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectMoodActivity">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/mood_gradient_background">

            <!-- Back Arrow Above Title -->
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mood_selection_prompt"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <!-- Mood Selection Grid -->
            <GridLayout
                android:id="@+id/moodGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="2"
                android:padding="8dp"/>

            <!-- Large Mood Display -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/selectedMoodContainer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:background="@drawable/mood_container_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/selectedMoodEmoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_emoji_selection"
                        android:textSize="80sp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/selectedMoodText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_emoji_text"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mood Intensity Section -->
            <TextView
                android:id="@+id/intensityLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mood Intensity"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"/>

            <!-- Mood Intensity Slider -->
            <SeekBar
                android:id="@+id/moodIntensitySlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="5"
                android:progressTint="@android:color/white"
                android:progressTintMode="src_in"
                android:secondaryProgressTint="@android:color/darker_gray"
                android:secondaryProgressTintMode="src_in"
                android:thumbTint="@android:color/white"
                android:thumbTintMode="src_in"
                android:splitTrack="false"/>

            <!-- Intensity Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/minIntensityLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Low"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/intensityDisplay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="●●●●●○○○○○○"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/maxIntensityLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="High"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Reason Why Label -->
            <TextView
                android:id="@+id/reasonWhyLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason why you feel this way"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"/>

            <!-- Reason Why Input -->
            <EditText
                android:id="@+id/reasonWhyInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Give a reason for the mood event (3 words or 20 characters)"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:inputType="text"
                android:maxLength="20"/>

            <!-- Social Situation Label -->
            <TextView
                android:id="@+id/socialSituationLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Social situation"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"/>

            <!-- Social Situation Input -->
            <Spinner
                android:id="@+id/socialSituationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:entries="@array/social_situation_options"/>

            <!-- Image Label -->
            <TextView
                android:id="@+id/imageLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add a photo (optional)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"/>

            <!-- Image Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:id="@+id/btnImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <!-- Placeholder Image -->
                    <ImageView
                        android:id="@+id/imgPlaceholder"
                        android:layout_width="89dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_image_placeholder"
                        android:tint="#AAAAAA"/>

                    <!-- Selected Image (Initially Hidden) -->
                    <ImageView
                        android:id="@+id/imgSelected"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <!-- Image Hint Text -->
                    <TextView
                        android:id="@+id/imageHintText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="20dp"
                        android:text="Tap to add a photo"
                        android:textColor="#757575"
                        android:textSize="12sp"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Location Label -->
            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add a location (optional)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"/>

            <!-- Location Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:id="@+id/btnLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/locationIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_map"
                            android:tint="#AAAAAA"/>

                        <TextView
                            android:id="@+id/selectedLocationText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Tap to add a location"
                            android:textColor="#757575"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mood Visibility Switch using SwitchCompat -->
            <LinearLayout
                android:id="@+id/visibilityContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/visibilityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/public_visibility"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/visibilitySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Location Label -->
            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add a location (optional)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"/>

            <!-- Location Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:id="@+id/btnLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/locationIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_map"
                            android:tint="#AAAAAA"/>

                        <TextView
                            android:id="@+id/selectedLocationText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Tap to add a location"
                            android:textColor="#757575"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mood Visibility Switch using SwitchCompat -->
            <LinearLayout
                android:id="@+id/visibilityContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/visibilityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/public_visibility"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_vertical"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/visibilitySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Location Label -->
            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add a location (optional)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"/>

            <!-- Location Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <FrameLayout
                    android:id="@+id/btnLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/locationIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_map"
                            android:tint="#AAAAAA"/>

                        <TextView
                            android:id="@+id/selectedLocationText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Tap to add a location"
                            android:textColor="#757575"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Extra spacing at the bottom if needed -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Floating Continue Button pinned at bottom right -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/continue_text"
        android:textSize="18sp"
        android:backgroundTint="#000000"
        android:textColor="@android:color/white"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cornerRadius="24dp"
        app:elevation="4dp"/>
</FrameLayout>